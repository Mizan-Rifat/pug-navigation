{
  "name": "pug-definition",
  "displayName": "Pug Definition",
  "description": "Provide easy navigation to pug definition files and mixin declarations",
  "publisher": "MizanRifat",
  "icon": "img/logo.png",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mizan-Rifat/pug-definition.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:pug",
    "onLanguage:jade"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pug-definition.pug-definition",
        "title": "Pug Definition"
      }
    ],
    "keybindings": [
      {
        "command": "pug-definition.pug-definition",
        "key": "ctrl+o",
        "mac": "ctrl+o",
        "when": "editorFocus && editorLangId == jade",
        "priority": 1000
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
